@{
    ViewData["Title"] = "Home Page";
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        
        $('#btnGetCities').click(function () {
            var location = getLocation();
            
            getCityFromLatAndLon();
            
        });
        $('#btnClear').click(function () {
            ulCities.empty();
        });
    });
</script>

<div>
    <div class="p-1 d-flex">
        <input type="text" id="searchInput" class="form-control justify-content-start" placeholder="Search for eats.."><i class="fas fa-times clear-results"></i>
        <i id="searchIcon" class='fas fa-search'></i><input id="btnSearch" class="btn btn-info justify-content-end" type="button" value="" /> 
    </div>
    <div class="p-1 d-flex">
        <fieldset>

            <div class="form-group">
                <select id="distance" class="custom-select">
                    <option value="1610" selected="">Distance</option>
                    <option value="1610">1 Mile</option>
                    <option value="4828">3 Miles</option>
                    <option value="8046">5 Miles</option>
                    <option value="16093">10 Miles</option>
                    <option value="32186">20 Miles</option>
                </select>
            </div>

        </fieldset>
        <fieldset>

            <div class="form-group ml-1">
                <select id="sort" class="custom-select">
                    <option value="" selected="">Sort</option>
                    <option value="cost">Price</option>
                    <option value="rating">Rating</option>
                    <option value="real_distance">Distance</option>
                </select>
            </div>

        </fieldset>

        <div class="form-group ml-1 d-flex align-items-center">
            <i class="dsc fas fa-sort-alpha-down fa-2x ml-1 d-flex align-content-center"></i>
            <i class="asc fas fa-sort-alpha-up fa-2x ml-1 d-flex align-content-center"></i>
        </div>

    </div>
</div>



<div id="restaurants" class="card mb-3 pt-1">
    <div class="icon-wrapper d-flex justify-content-center align-items-center">
        <i class="fas fa-utensils fa-9x search-icon"></i>
    </div>
</div>

