@model WebApplication1.Models.Rootobject;
<section class="categories spad">
    @if (Model != null)
    {
        <div class="categories__post">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="categories__post__item categories__post__item--large">
                            @*<div class="categories__post__item__pic set-bg"
                                 data-setbg=>*@
                            <div class="">
                                <div class="post__meta">
                                    <h4>@Model.title</h4>
                                </div>
                            </div>
                            <div class="categories__post__item__text">

                                <h3>
                                    <a href="#">
                                        @Model.display_text
                                    </a>
                                </h3>

                                <p>
                                    @Model.description
                                </p>
                                <a href="#" class="primary-btn">Read more</a>
                                <div class="post__social">
                                    <span>Share</span>
                                    <a href="#"><i class="fa fa-facebook"></i> <span>82</span></a>
                                    <a href="#"><i class="fa fa-twitter"></i> <span>24</span></a>
                                    <a href="#"><i class="fa fa-envelope-o"></i> <span>08</span></a>
                                </div>
                            </div>
                        </div>
                        @if (Model.collections != null)
                        {
                                <div class="row">
                            @foreach (var item in Model.collections)
                            {
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        <div class="categories__post__item">
                                            <div class="categories__post__item__pic small__item set-bg"
                                                 data-setbg=@item.collection.image_url>
                                                <div class="post__meta">
                                                    <h4>@item.collection.collection_id</h4>
                                                </div>
                                            </div>
                                            <div class="categories__post__item__text">
                                                <span class="post__label">@item.collection.title</span>
                                                <h3><a href=@item.collection.url>@item.collection.description</a></h3>
                                            </div>
                                        </div>
                                    </div>
                            }
                                </div>
                        }
                        @*<div class="col-lg-12 text-center">
                            <div class="load__more__btn">
                                <a href="#">Load more</a>
                            </div>
                        </div>*@
                    </div>
                </div>
            </div>
        </div>
    }
</section>